<!DOCTYPE html>
<html lang="en" class="{% block htmlClass %}{% endblock %}">
<head>
    <meta charset="utf-8">
    <title>{{ bigfoot_theme_values.title | trans }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="{{ bigfoot_theme_values.provided_by | trans }}">

    <script type="text/javascript">
        var defaultPortfolioRoute = "{{ path('portfolio_dashboard') }}";
        var currentLocale = "{{ app.request.locale }}";
        {% if locales is defined and locales | length %}var locales = ["{{ locales | join('","') | raw }}"];{% endif %}
        var basePath = "{{ app.request.basePath }}";
        var tagsPath = "{{ path('admin_tag_get') }}";
    </script>

    {% block stylesheets %}
        {% stylesheets
            'admin/css/bootstrap.min.css'
            'admin/css/font-awesome.min.css'
            'admin/css/jquery-ui-1.10.3.custom.min.css'
            'admin/css/chosen.css'
            'admin/css/datepicker.css'
            'admin/css/bootstrap-timepicker.css'
            'admin/css/daterangepicker.css'
            'admin/css/colorpicker.css'
            'admin/css/ace-fonts.css'
            'admin/css/ace.min.css'
            'admin/css/ace-rtl.min.css'
            'admin/css/ace-skins.min.css'
            'admin/css/jquery.gritter.css'
            'admin/css/custom.css'

        filter='cssrewrite'
            output='compiled/admin/css/admin.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        <!--[if IE 7]>
        <link rel="stylesheet" href="{{ 'admin/css/font-awesome-ie7.min.css' }}" />
        <![endif]-->

        <!--[if lte IE 8]>
        <link rel="stylesheet" href="{{ 'admin/css/ace-ie.min.css' }}" />
        <![endif]-->

        <!--[if lt IE 9]>
        <script src="{{ 'admin/js/html5shiv.js' }}"></script>
        <script src="{{ 'admin/js/respond.min.js' }}"></script>
        <![endif]-->
    {% endblock stylesheets %}
</head>

<body class="{% block bodyClass %}{% endblock bodyClass %}">
{% block body %}
<div class="navbar navbar-default" id="navbar">
    {% block toolbar %}
        <div class="navbar-container" id="navbar-container">
            <div class="navbar-header pull-left">
                <a href="#" class="navbar-brand">
                    <small>
                        {{ bigfoot_theme_values.title }}
                    </small>
                </a>
            </div>

            <div class="navbar-header pull-right" role="navigation">
                <ul class="nav ace-nav">
                    {% if theme.toolbar.menu is defined and theme.toolbar.menu.items|length and app.security.token %}
                    <li class="light-blue">
                        <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                            <i class="icon-user"></i>
                            <span class="user-info">
                                <small>{{ 'Welcome' | trans }},</small>
                                {{ app.security.token.user.fullName }}
                            </span>

                            <i class="icon-caret-down"></i>
                        </a>
                        <ul class="user-menu pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
                            {% for item in theme.toolbar.menu.items %}
                                <li><a href="{{ path(item.route, item.parameters) }}"><i class="icon-{{ item.icon }}"></i> {{ item.label | trans }}</a></li>
                            {%  endfor %}
                        </ul>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    {% endblock toolbar %}
</div>
