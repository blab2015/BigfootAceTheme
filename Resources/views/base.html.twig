<div class="main-container" id="main-container">
    <div class="main-container-inner">
        <a class="menu-toggler" id="menu-toggler" href="#">
            <span class="menu-text"></span>
        </a>
    {% block sidebar -%}
        {%- set currentRoute = app.request.get('_route') -%}
        <div class="sidebar" id="sidebar">
            <ul class="nav nav-list">
                {% for section in theme.sidebar.menu.items -%}
                    {%- if section.childs|length -%}
                <li{% if section.hasChildWithRoute(currentRoute) %} class="active open"{% endif %}>
                    <a href="#" class="dropdown-toggle">
                        <i class="icon-{{ section.icon | default('double-angle-right') }}"></i>
                        <span class="menu-text">{{ section.label | trans }}</span>
                        <b class="arrow icon-angle-down"></b>
                    </a>
                    <ul class="submenu">
                    {% for item in section.childs -%}
                        {%- if item.childs|length -%}
                        <li{% if item.hasChildWithRoute(currentRoute) %} class="active open"{% endif %}>
                            <a href="#" class="dropdown-toggle">
                                <i class="icon-{{ item.icon | default('double-angle-right') }}"></i>
                                <span class="menu-text">{{ item.label | trans }}</span>
                                <b class="arrow icon-angle-down"></b>
                            </a>
                            <ul class="submenu">
                            {% for item in item.childs -%}
                                <li{% if currentRoute == item.route %} class="active"{% endif %}>
                                    <a href="{{ path(item.route) }}">
                                        <i class="icon-{{ item.icon | default('double-angle-right') }}"></i>
                                        {{ item.label | trans }}
                                    </a>
                                </li>
                            {% endfor -%}
                            </ul>
                        {% elseif item.route -%}
                        <li{% if currentRoute == item.route %} class="active"{% endif %}>
                            <a href="{{ path(item.route) }}">
                                <i class="icon-{{ item.icon | default('double-angle-right') }}"></i>
                                {{ item.label | trans }}
                            </a>
                        </li>
                        {% endif -%}
                    {%- endfor -%}
                    </ul>
                </li>
                    {%- elseif section.route %}
                <li>
                    <a href="{{ path(section.route) }}">
                        <i class="icon-{{ section.icon | default('list-alt') }}"></i>
                        <span class="menu-text">{{ section.label | trans }}</span>
                    </a>
                </li>
                    {%- endif %}
                {%- endfor %}
            </ul>
        </div>
    {%- endblock sidebar %}

        <div class="main-content">
        {% block main_content %}
            {% block header %}
            <div class="breadcrumbs" id="breadcrumbs">
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home home-icon"></i>
                        <a href="#">Home</a>
                    </li>

                    <li>
                        <a href="#">Other Pages</a>
                    </li>
                    <li class="active">Blank Page</li>
                </ul>
            </div>
            {% endblock header %}

            <div class="page-content">
                {% block page_header %}
                <div class="page-header">
                    <h1>
                        {{ theme.page_header.title | default( bigfoot_theme_values.title ) | trans }}
                        {% if theme.page_header.subtitle is defined %}
                        <small>
                            <i class="icon-double-angle-right"></i>
                            {{ theme.page_header.subtitle | default('') | trans }}
                        </small>
                        {% endif %}
                    </h1>
                </div>
                {% endblock %}
                <div class="row">
                    <div class="col-xs-12">
                        {% block content %}
                        {% endblock content %}
                    </div>
                </div>
            </div>
            {% endblock %}
        </div>
    </div>
    <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
        <i class="icon-double-angle-up icon-only bigger-110"></i>
    </a>
</div>

</div>
{% endblock body %}
