{% extends bigfoot_theme_bundle~'::base.html.twig' %}

{% block bodyClass %}login-layout{% endblock bodyClass %}

{% block body %}
    <div id="navbar" class="navbar navbar-default navbar-fixed-top">

        <div id="navbar-container" class="navbar-container">
            <div class="navbar-header pull-left">
                <div class="navbar-welcome">
                    <small>
                        {#<i class="icon-leaf"></i>#}
                        <img src="{{ asset("admin/images/common/logo-c2is.png") }}" alt="C2iS">
                        / Bienvenue sur votre interface d'administration
                    </small>
                </div><!-- /.brand -->
            </div><!-- /.navbar-header -->

            <div class="navbar-header pull-right">
                <ul class="nav ace-nav">
                    <li class="grey">
                        <small>BigFoot v. 1.X ©C2iS</small>
                    </li>
                    <li class="grey">
                        <a href="#">
                            Contactez le support
                            <i class="icon-wrench align-center bigger-125 icon-on-right"></i>
                        </a>
                    </li>
                </ul>
            </div><!-- /.navbar-header -->
        </div><!-- /.container -->
    </div>
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <img src="{{ asset("admin/images/common/logo-bigfoot.png") }}" alt="{{ 'Bigfoot'|trans }}">
                                {#<span class="red">{{ 'Bigfoot'|trans }}</span>#}
                                {#<span class="white">{{ 'administration interface'|trans }}</span>#}
                            </h1>
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            {% block form %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="footerbar-container" class="footerbar-container">
        <div>
            <a href="http://www.c2is.fr/" target="_blank">Réalisé par C2iS</a> - <a href="http://symfony.com/" target="_blank">Propulsé par Symfony</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        function show_box(id) {
            jQuery('.widget-box.visible').removeClass('visible');
            jQuery('#'+id).addClass('visible');
        }
    </script>
{% endblock javascripts %}
