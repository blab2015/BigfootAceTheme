{% block admin_page_sidebar_row %}
    {% spaceless %}
        <li class="sidebar-row">
            <h3>
                <div class="content-sidebar-name"></div>
            </h3>
            <div class="s-accordion">
                <p>
                    <div class="width-100 pull-left">
                        {{ form_row(form.sidebar, { 'attr': { 'class': 'admin_sidebar_select' }}) }}
                    </div>

                    <div class="pull-right">
                        <a href="#" class="admin-delete-sidebar"><i class="icon-remove red bigger-130"></i></a>
                    </div>

                    <div class="clear"></div>

                    <div class="hidden">
                        {{ form_row(form.position, {'attr': {'class': 'sidebar-position'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.template, 'Template') }}

                        <fieldset class="templates-container">
                            {% for template in form.template %}
                                <label style="text-align:center;">
                                    {{ form_widget(template) }}
                                    {%- set templateFileName = template.vars.value %}
                                    {%- if '/' in templateFileName %}
                                        {%- set templateFileName = template.vars.value|split('/')|slice(1)|join('/') %}
                                    {%- endif %}
                                    <img src="{{ asset('images/template/sidebar/' ~ templateFileName ~ '.svg') }}" width="80" height="80"><br />
                                    <span style="font-size:9px;">{{ template.vars.label }}</span>
                                </label>
                            {% endfor %}
                        </fieldset>
                    </div>
                </p>
            </div>
        </li>
    {% endspaceless %}
{% endblock admin_page_sidebar_row %}

{% block radio_widget %}
    {% spaceless %}
        <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
    {% endspaceless %}
{% endblock radio_widget %}