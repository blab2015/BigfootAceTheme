{% extends bigfoot_theme_bundle ~ '::layout.html.twig' %}

{% block content %}
    <div class="table-header">
        <div class="pull-left">
            {{ list_title|trans }}
        </div>

        <div class="pull-right">
            {% for globalAction in globalActions %}
                <div class="action-buttons">
                    <a href="{{ path(globalAction.route) }}" class="mg-right-5">
                        <i class="icon-plus-sign white bigger-140"></i>
                    </a>
                </div>
            {% endfor %}
        </div>

        <div class="clearfix"></div>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                {% for attr, field in list_fields %}
                    <th>{{ knp_pagination_sortable(list_items, field|trans, 'e.' ~ attr) }}</th>
                {% endfor %}

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for item in list_items %}
                <tr class="entity-edit">
                    {% for attr, field in list_fields %}
                        <td>{{ attribute(item, attr)|nl2br }}</td>
                    {% endfor %}

                    <td>
                        <div class="action-buttons">
                            {% for action in actions %}
                                <a href="{{ path(action.route, { 'id': item.id }) }}" class="{{ action.color }} {{ action.icon }}">
                                    <i class="icon-{{ action.icon }} bigger-130"></i>
                                </a>
                            {% endfor %}
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="row text-center">
        {{ knp_pagination_render(list_items) }}
    </div>
{% endblock %}
