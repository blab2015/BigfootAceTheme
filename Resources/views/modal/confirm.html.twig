{% twig_js name="confirmModal" %}
<div class="modal container fade in" id="confirmModal">
    <div class="modal-header">
        <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">{{ confirmTitle | default('Please confirm') }}</h4>
    </div>
    <div class="modal-body">
        <div class="bootbox-body">{{ confirmMessage | default('Are you sure you want to perform this action ?') }}</div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-bb-handler="cancel">{{ confirmButtonCancel | default('Cancel') }}</button>
        <button type="button" class="btn btn-primary" data-bb-handler="confirm">{{ confirmButtonOk | default('Ok') }}</button>
    </div>
</div>
