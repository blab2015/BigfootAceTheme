{% if bigfoot_theme.show_page_header is not defined or bigfoot_theme.show_page_header %}
    <div class="page-header">
        <h1>
            {{ theme.page_header.title|default( bigfoot_theme.title|default('Bigfoot') )|trans }}
            {% if theme.page_header.subtitle is defined %}
                <small>
                    <i class="icon-double-angle-right"></i>
                    {{ theme.page_header.subtitle | default('') | trans }}
                </small>
            {% endif %}
        </h1>
    </div>
{% else %}
    <div class="page-no-header"></div>
{% endif %}